<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Vaadin Sticky Notes</display-name>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath*:applicationContext.xml</param-value>
    </context-param>
    <listener>
        <description>Spring Application Context Controller</description>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <description>Vaadin GWT Public Interface</description>
        <servlet-name>Vaadin GWT Terminal</servlet-name>
        <servlet-class>com.meschbach.xp.vaadin.sticky.spring.AutowiringApplicationServlet</servlet-class>
        <init-param>
            <description>Vaadin Framework's Application Class</description>
            <param-name>application</param-name>
            <param-value>com.meschbach.xp.vaadin.App</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>Vaadin GWT Terminal</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
